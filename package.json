{
  "name": "project-crafter",
  "displayName": "Project Crafter",
  "description": "Streamlined Project Setup",
  "author": {
    "name": "Bug busters"
  },
  "publisher": "bug-busters",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fracergu/project-crafter.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "project-crafter.createProject",
        "title": "Project Crafter: Create Project"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node i18nSetup.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint . --ext ts",
    "test": "node ./out/test/runTest.js",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check \"**/*.ts\"",
    "format:fix": "prettier --write \"**/*.ts\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.10",
    "@types/mocha": "^10.0.4",
    "@types/ncp": "^2.0.8",
    "@types/node": "18.x",
    "@types/sinon": "^17.0.1",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "mocha": "^10.2.0",
    "ncp": "^2.0.0",
    "prettier": "^3.1.0",
    "sinon": "^17.0.1",
    "typescript": "^5.2.2"
  }
}
